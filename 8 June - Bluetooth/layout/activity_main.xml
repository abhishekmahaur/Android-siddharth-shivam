<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bmpl.bluetooth.MainActivity"
    android:padding="16dp">

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bluetoothSwitch"
        android:text="Bluetooth"
        android:textSize="25sp"
        android:switchMinWidth="60dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bluetoothSwitch"
        android:text="Visible"
        android:id="@+id/visibleButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bluetoothSwitch"
        android:text="Pair Devices"
        android:id="@+id/pairDeviceButton"
        android:layout_alignParentEnd="true"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/visibleButton"
        android:id="@+id/listView"></ListView>

</RelativeLayout>
