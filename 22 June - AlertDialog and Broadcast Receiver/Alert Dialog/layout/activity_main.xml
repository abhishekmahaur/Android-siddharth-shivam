<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="dialogapplication.bmpl.com.dialogapplication.MainActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click on one button"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:id="@+id/textview"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Alert with one button"
        android:id="@+id/onebutton"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:background="@color/colorPrimary"
        android:padding="@dimen/activity_horizontal_margin"
        android:onClick="oneButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Alert with Two button"
        android:id="@+id/twobutton"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorAccent"
        android:layout_marginTop="20dp"
        android:padding="@dimen/activity_horizontal_margin"
        android:onClick="twoButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Alert with Three button"
        android:id="@+id/threebutton"
        android:layout_gravity="center_horizontal"
        android:background="#f9ed80"
        android:layout_marginTop="20dp"
        android:padding="@dimen/activity_horizontal_margin"
        android:onClick="threeButton"/>

</LinearLayout>
